server {
    # Listen on the exposed port (typically 80)
    listen 80;

    # Set the root directory for your React application's static files
    root /usr/share/nginx/html;

    # Define the default files to serve when a request is made
    index index.html index.htm;

    # A location block to handle routing
    location / {
        # Try to serve the requested file directly
        try_files $uri $uri/ /index.html;
    }
}
